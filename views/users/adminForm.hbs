          placeholder="longevity"
          aria-label="longevity"
          value="{{ bird.longevity }}"
        >
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
      </div>
        
     <div class="mb-3">
        <label for="formFile" class="form-label">Añade foto de perfil del ave</label>
        <input class="form-control" type="file" id="formFile" name="image">
        {{#if error}}<div class="text-danger text-center mb-2">{{ error }}</div>{{/if}}
     </div>
      <div class="input-group mb-2">
        <button type="submit" class="btn btn-primary bg-light-green border-0">Añadir Ave</button>
      </div>
